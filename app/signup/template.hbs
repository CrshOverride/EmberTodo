<div class="jumbotron text-center">
  <h1><span class="fa fa-list-ul"></span> YATD App</h1>
</div>
<div class="col-sm-6 col-sm-offset-3">

  <h1><span class="fa fa-sign-in"></span> Signup</h1>

  <!-- LOGIN FORM -->
  <form data-ng-submit="signup()">
    <div class="form-group">
      <label>Email</label>
      <input type="text" class="form-control" name="email" data-ng-model="email">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" name="password" data-ng-model="password">
    </div>

    <button type="submit" class="btn btn-warning btn-lg">Signup</button>
  </form>

  <hr>

  <p>Already have an account? <a href="/login">Login</a></p>

</div>
