<div class="jumbotron text-center">
  <h1><span class="fa fa-list-ul"></span> YATD App</h1>
</div>
<div class="col-sm-6 col-sm-offset-3">

  <h1><span class="fa fa-sign-in"></span> Signup</h1>

  {{#if signup_error_message}}
    <div class="alert alert-danger">{{signup_error_message}}</div>
  {{/if}}

  <!-- LOGIN FORM -->
  <form {{action 'signup' on='submit'}}>
    <div class="form-group">
      <label>Email</label>
      {{input class='form-control' id='email' placeholder='Enter Email Address' value=email}}
    </div>
    <div class="form-group">
      <label>Password</label>
      {{input class='form-control' id='password' placeholder='Enter Password' type='password' value=password}}
    </div>

    <button type="submit" class="btn btn-warning btn-lg">Signup</button>
  </form>

  <hr>

  <p>Already have an account? <a href="/login">Login</a></p>

</div>
